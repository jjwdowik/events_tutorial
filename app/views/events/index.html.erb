<h1><%= pluralize(@events.size, 'Event') %> </h1>

<ul>
	<% @events.each do |event| %>
		<li>
			<strong><%= link_to(event.name, event_path(event)) %></strong>
			in <%= event.location %>: 

			<%= format_price(event) %>
			<br />
			About: <%= truncate(event.description, length: 15) %>
			<br />
			When it starts: <%= format_date(event) %>
		</li>
	<% end %>
</ul>