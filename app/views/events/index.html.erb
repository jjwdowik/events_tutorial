<h1><%= @events.size %></h1>

<ul>
	<% @events.each do |event| %>
		<li>
			<strong><%= event.name %></strong>
			in <%= event.location %>: 
			<%= number_to_currency(event.price) %>
			<br />
			About: <%= event.description %>
			<br />
			When it starts: <%= event.starts_at %>
		</li>
	<% end %>
</ul>